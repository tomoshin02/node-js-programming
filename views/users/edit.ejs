<div class="data-form">
  <form action="<%=`/users/${user._id}/update?_method=PUT`%>" method="POST">
    <h2>Edit a user</h2>
    <label for="inputFirstName">First Name</label>
    <input type="text" name="first" id="inputFirstName" placeholder="First" value="<%= user.name.first %>" autofocus>
    <label for="inputLastName">Last Name</label>
    <input type="text" name="last" id="inputlatName" placeholder="Last" value="<%= user.name.last %>">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" placeholder="Password"  value="<%= user.password %>" required>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" placeholder="Email" value="<%= user.email %>" required>
    <label for="inputZipcode"></label>
    <input type="text" name="zipCode" id="inputZipcode" pattern="*" placeholder="Zip Code" value="<%= user.zipCode %>" required>
    <button type="submit">Update</button>
  </form>
</div>